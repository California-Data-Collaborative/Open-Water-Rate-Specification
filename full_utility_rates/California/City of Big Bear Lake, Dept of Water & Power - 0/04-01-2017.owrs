      depends_on: meter_size
      values:
        5/8" : 91.20
        1" : 163.26
    commodity_charge: Tiered
    tier_starts_commodity:
      - 0
      - 9
      - 25
      - 41
      - 61
      - 100
    tier_prices_commodity:
      - 0
      - 2.75
      - 3.82
      - 5.69
      - 9.69
      - 13.03
    fixed_drought_surcharge: 0
    variable_drought_surcharge: 0
    fixed_wastewater_charge: 0
    variable_wastewater_charge: 0
